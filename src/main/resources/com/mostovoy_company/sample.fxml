<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<TabPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.mostovoy_company.Controller" tabClosingPolicy="UNAVAILABLE" >
    <Tab fx:id="manualMatrixTab" text="Настройки">
    </Tab>
    <Tab fx:id="fullExperiment" text="Общий эксперимент">
    </Tab>
    <Tab text="Специальный эксперимент">
        <AnchorPane>
            <Button fx:id="applyAnalyzerExperiment"
                    mnemonicParsing="false" text="Apply"/>
            <Label
                   text="Размер матрицы:"/>
            <TextField fx:id="matrixSizeAnalyzer"
                       />
            <TextField fx:id="matrixCountAnalyzer"
                       />
            <Label
                   text="Количество матриц:"/>
            <Label
                   text="Концентрация:"/>
            <TextField fx:id="concentrationAnalyzer"
                       />
            <TableView fx:id="analyzerDataTable"
                       />
        </AnchorPane>
    </Tab>
</TabPane>

